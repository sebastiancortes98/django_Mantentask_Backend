# Django Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost

# Database Configuration (Optional - Leave empty to use SQLite)
# Uncomment and configure these variables to use MySQL
# DB_NAME=mantentask_db
# DB_USER=mantentask_user
# DB_PASSWORD=change-me
# DB_HOST=127.0.0.1
# DB_PORT=3306

# MySQL Root Password (only for Docker)
# MYSQL_ROOT_PASSWORD=root-change-me

# Email Configuration
# Opción 1: GMAIL (requiere App Password, no contraseña regular)
# https://myaccount.google.com/apppasswords
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-app-password-gmail
DEFAULT_FROM_EMAIL=tu-email@gmail.com

# Opción 2: Outlook/Office365
# EMAIL_HOST=smtp.office365.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=tu-email@outlook.com
# EMAIL_HOST_PASSWORD=tu-contraseña

# Opción 3: Servidor SMTP personalizado
# EMAIL_HOST=smtp.tuservidor.com
# EMAIL_PORT=587 (o 465 para TLS, o 25 para sin encriptación)
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=usuario@tuservidor.com
# EMAIL_HOST_PASSWORD=tu-contraseña

# Opción 4: Consola (desarrollo - muestra en terminal)
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
